<Window x:Class="TegningHenter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TegningHenter"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="15">
        <StackPanel>
            <TextBlock Text="Addresse i denne orden: addresse postnummer by - ex. Sevelvej 34 7830 Vinderup" HorizontalAlignment="Center"></TextBlock>
        <TextBox Background="AliceBlue" Width="150" Margin="0 15" Text="{Binding Address}" ></TextBox>
        <Button Content="Få billede" Background="LightBlue" Width="75" Height="auto" Padding="5"  Command="{Binding GetAddressCommand}"></Button>
        </StackPanel>
    </Grid>
</Window>
